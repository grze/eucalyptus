<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0" xmlns:euca="http://www.eucalyptus.com/schema/cloud/1.6"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.eucalyptus.com/schema/cloud/1.6 http://www.eucalyptus.com/schema/cloud/1.6/euca.xsd">

    <euca:endpoint name="SimpleDBControllerWS"
                   connector-ref="eucaws"
                   address="http://127.0.0.1:8773/services/SimpleDB"/>
    <euca:endpoint name="SimpleDBInternalWS"
                   connector-ref="eucaws"
                   address="http://127.0.0.1:8773/internal/SimpleDBInternal"
                   synchronous="true"/>

    <endpoint name="SimpleDBWS" address="vm://SimpleDB" synchronous="false"/>
    <endpoint name="SimpleDBInternalVM" address="vm://SimpleDBInternal" synchronous="true"/>
    <endpoint name="SimpleDBErrorQueueWS" address="vm://SimpleDBErrorQueue" synchronous="false"/>
    <model name="simpledb">

        <default-service-exception-strategy>
            <outbound-endpoint ref="SimpleDBErrorQueueWS" />
        </default-service-exception-strategy>

        <service name="SimpleDBRequestQueue">
            <inbound>
                <vm:inbound-endpoint ref="SimpleDBRequestQueueEndpoint" />
            </inbound>
            <bridge-component />
            <outbound>
                <filtering-router>
                    <outbound-endpoint ref="SimpleDBWS" />
                    <payload-type-filter expectedType="com.eucalyptus.sdb.SdbMessage" />
                </filtering-router>
            </outbound>
        </service>

        <service name="SimpleDB">
            <inbound>
                <inbound-endpoint ref="SimpleDBWS" />
            </inbound>
            <component class="com.eucalyptus.sdb.SimpleDBService" />
            <outbound>
                <filtering-router>
                    <outbound-endpoint ref="ReplyQueueEndpoint" />
                    <payload-type-filter expectedType="com.eucalyptus.sdb.SdbMessage" />
                </filtering-router>
            </outbound>
        </service>

        <service name="SimpleDBErrorQueue">
            <inbound>
                <inbound-endpoint ref="SimpleDBErrorQueueWS" />
            </inbound>
            <component class="com.eucalyptus.sdb.ws.SimpleDBErrorHandler" />
        </service>

    </model>
    <model name="simpledb-internal">
        <service name="SimpleDBInternal">
            <inbound>
                <inbound-endpoint ref="SimpleDBInternalWS" />
                <inbound-endpoint ref="SimpleDBInternalVM" />
            </inbound>
            <component class="com.eucalyptus.sdb.SimpleDBService" />
        </service>
    </model>

</mule>